@model ListDto<ElectricLocomotive>

@{
    ViewBag.Title = "Электровоз";
    Layout = "_DictionaryLayout";
}

<div class="text-left" style="margin-bottom: 5px;margin-top: 5px;">
    <a asp-action="Create" class="btn btn-primary">Создать</a>
</div>

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-center">Уникальный номер</th>
        <th class="text-center">Серийный номер</th>
        <th class="text-center">Модификация</th>
        <th class="text-center">Мощность</th>
        <th class="text-center">Число осей</th>
        <th class="text-center">Число секций</th>
    </tr>

    @foreach (var item in Model.Items)
    {
        <tr>
            <td class="text-right">@item.UniqueNumber</td>
            <td class="text-right">@item.SerialNumber</td>
            <td class="text-right">@item.Modification</td>
            <td class="text-right">@item.Power</td>
            <td class="text-right">@item.PinCount</td>
            <td class="text-right">@item.SectionCount</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-electricLocomotivesId="@item.Id">Редактировать</a>
                    <input type="hidden" name="electricLocomotivesId" value="@item.Id"/>
                    <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                </form>
            </td>
        </tr>
    }
</table>

<div
    page-model="@Model.PagingInfo"
    page-action="Index"
    page-classes-enabled="true"
    page-class="btn"
    page-class-normal="btn-secondary"
    page-class-selected="btn-primary"
    class="btn-group pull-right m-1">
</div>