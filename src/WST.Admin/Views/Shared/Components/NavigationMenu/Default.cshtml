@model IEnumerable<MenuItemViewModel>

@foreach (var menuItem in Model)
{
    <a class="btn btn-block @(menuItem.Controller == ViewBag.SelectedMenuItem ? "btn-info" : "btn-secondary")"
       asp-action="Index"
       asp-controller=@menuItem.Controller
       @* asp-route-category="@category" *@
       asp-route-page="1"
    >
        @menuItem.Name
    </a>
}