@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <link rel="stylesheet" asp-href-include="/lib/bootstrap/dist/**/*.min.css" asp-href-exclude="**/*-reboot*,**/*-grid"/>
    <link rel="stylesheet" asp-href-include="/lib/fontawesome/css/*.css"/>
</head>
<body>
<h3>Вход</h3>

<div class="text-danger" asp-validation-summary="All"></div>
<form asp-action="Login" asp-controller="Account" method="post" class="w-25">
    <input type="hidden" asp-for="ReturnUrl"/>
    <div class=" form-group">
        <label asp-for="Name">Имя</label>
        <div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <input asp-for="Name" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Password">Пароль</label>
        <div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <input asp-for="Password" class="form-control"/>
    </div>
    <button class="btn btn-primary" type="submit">Войти</button>
</form>
</body>
</html>