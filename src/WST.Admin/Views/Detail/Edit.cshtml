@model Detail

@{
    ViewBag.Title = "Детали";
    Layout = "_DictionaryLayout";
}

<form asp-action="Edit" method="post">
    <div class="text-left" style="margin-bottom: 15px;margin-top: 15px;">
        <button class="btn btn-primary" type="submit">Сохранить</button>
        <a asp-action="Index" class="btn btn-secondary">Отменить</a>
    </div>
    <input asp-for="Id" type="hidden" class="form-control"/>
    <div class="form-group">
        <label asp-for="Name">Наименование</label>
        <div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <input asp-for="Name" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Description">Описание</label>
        <div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <input asp-for="Description" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Number">Номер</label>
        <div>
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>
        <input asp-for="Number" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Amount">Остаток на складе, шт</label>
        <div>
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <input asp-for="Amount" class="form-control"/>
    </div>

</form>