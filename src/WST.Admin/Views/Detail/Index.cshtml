@model ListDto<Detail>

@{
    ViewBag.Title = "Детали";
    Layout = "_DictionaryLayout";
}

<div class="text-left" style="margin-bottom: 5px;margin-top: 5px;">
    <a asp-action="Create" class="btn btn-primary">Создать</a>
</div>

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-center">Наименование</th>
        <th class="text-center">Описание</th>
        <th class="text-center">Номер</th>
        <th class="text-center">Остаток на складе, шт</th>
    </tr>

    @foreach (var item in Model.Items)
    {
        <tr>
            <td class="text-right">@item.Name</td>
            <td class="text-right">@item.Description</td>
            <td class="text-right">@item.Number</td>
            <td class="text-right">@item.Amount</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-detailId="@item.Id">Редактировать</a>
                    <input type="hidden" name="detailId" value="@item.Id"/>
                    <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                </form>
            </td>
        </tr>
    }
</table>

<div
    page-model="@Model.PagingInfo"
    page-action="Index"
    page-classes-enabled="true"
    page-class="btn"
    page-class-normal="btn-secondary"
    page-class-selected="btn-primary"
    class="btn-group pull-right m-1">
</div>